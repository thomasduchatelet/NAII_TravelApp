<Page
    x:Class="TravelApp.View.TripDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:TravelApp.Shared.Dto" xmlns:viewmodel="using:TravelApp.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel>
            <TextBlock  x:Name="lblTitle" Text="{x:Bind ViewModel.Trip.Title}"/>
            <TextBlock x:Name="lblStartDate" Text="{x:Bind ViewModel.Trip.StartDate.ToString()}" />
            <TextBlock x:Name="lblEndDate" Text="{x:Bind ViewModel.Trip.EndDate.ToString()}"/>
        </StackPanel>
        <Button x:Name="btnPackingList" Content="Packing list" />
        <Button x:Name="btnTodoList" Content="To Do" />
        <Button x:Name="btnItinerary" Content="Itinerary"/>


    </Grid>
</Page>
